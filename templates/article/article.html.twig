{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <main> 
    <nav class="navlist">
        {% if categories %}
            <p class="a-non">КАТЕГОРИИ:</p>
            {% for category in categories %}
            <a href="{{path('articles_by_category', {'category': category.name})}}">{{ category.url | upper}}</a>
            {% endfor %}
        {% endif %}
    </nav>
    <div class="article">
        {% if article %}
        <div class="articlecell">
            <img src="{{ asset('img/'~ article.categories.idCategories ~'.jpeg')}}">
            <div class='flex'>
                <div class="leftside">
                    <small class="flex-column">
                        <p>Написана {{ article.created | date("d.m.Y") }}</p>
                        <h6>КАТЕГОРИЯ: {{ article.categories.url}} </h6>
                        <h6>автор: {{ article.authorsName.name}}  {{article.authorsName.lastName}} </h6>
                        
                    </small>
                </div>
                
                <div class="flex-column">
                    <h5>{{ article.url}}</h5>           
                    <p>{{ article.text }}</p>
                    <a href="{{path('items_by_category', {'category': article.categories.name})}}">похожие товары</a>
                    <a href="{{path('articles_by_category', {'category': article.categories.name})}}">другие статьи по теме</a>
                </div>
            </div>
            
        </div>
        {% endif %}
    </div>

    </main>
{% endblock %}
